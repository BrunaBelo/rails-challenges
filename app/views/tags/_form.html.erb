<div class="container form-task">
  <%= form_with(model: tag, local: true) do |form| %>
    <% if tag.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

        <ul>
          <% tag.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card mt-5">
      <div class="card-header">
        <strong>Task</strong>
      </div>
      <div class="card-body">
        <div class="field">
          <strong><%= form.label :name %></strong>
          <%= form.text_field :name, class: "form-control mb-4" %>
        </div>

        <div class="field">
          <strong><%= form.label :color %></strong>
          <%= form.color_field :color, class: "form-control mb-4" %>
        </div>
      </div>
      <div class="card-footer text-muted">
        <div class="row float-right">
          <%= button_tag(type: 'submit', class: "btn btn-success") do %> Save<% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
